<main>
  <header class='mb-3 my-2'>
    {{#with navigation}}
      <div class='card m-1 p-5'>
        <nav class='nav row'>

          <div class='col-4'></div>
          <ul class='col-4'>
            <li class='d-flex'>
              {{#each links}}
                <a
                  class='nav-link'
                  href='{{href}}'
                >{{text}}</a>
              {{/each}}
            </li>
          </ul>
        </nav>
      </div>
    {{/with}}
  </header>
  <div class='row m-1'>
    <h1>{{header}}</h1>
    {{#with contacts_data}}
      <h2 class='pt-5'>{{title}}</h2>
      <div class='row-6'>
      {{#each buttons}}
          {{#if isPrimary}}
            <div
              class='btn btn-warning text-light'
            >{{text}}</div>
          {{/if}}
          {{#if isOutline}}
            <div
              class='btn btn-outline-warning text-warning'
            >{{text}}</div>
          {{/if}}
       {{/each}}
       <div class='row m-1'>
         {{#with form}}
         {{#with input}}
       {{#with surname}} 
    <div class='col-4'>
     <label class='form-label'>{{label}}</label>
     <select class='form-select form-select-sm'>
       <option>{{placeholder}}</option> 
      <option>{{caption}}</option>
     </select>
      <div class='form-text text-secondary'>Caption text,description,error notification</div>
    </div>
    {{#with name}}
    <div class='col-4 m-1'>
     <label class='form-label p-5'>{{label}}</label>
     <select class='form-select form-select-sm'>
       <option>{{placeholder}}</option> 
      <option>{{caption}}</option>
     </select>
      <div class='form-text text-secondary'>Caption text,description,error notification</div>
    </div>
     {{/with}}
      {{/with}}
      {{#with name}}
    <div class='col-4'>
     <label class='form-label m-1 p-6'>{{label}}</label>
     <select class='form-select form-select-sm'>
       <option>{{placeholder}}</option> 
      <option>{{caption}}</option>
     </select>
      <div class='form-text text-secondary'>Caption text,description,error notification</div>
    </div>
    {{/with}}
    {{#with phone}}
    <div class='row'>
      <div class="col-4">
     <label class='form-label'>{{label}}</label>
     <select class='form-select form-select-sm'>
       <option>{{placeholder}}</option> 
      <option>{{caption}}</option>
     </select>
      <div class='form-text text-secondary'>Caption text,description,error notification</div>
    </div>
    {{/with}}
    {{#with email}}
    <div class="col-4">
     <label class='form-label'>{{label}}</label>
     <select class='form-select form-select-sm'>
       <option>{{placeholder}}</option> 
      <option>{{caption}}</option>
     </select>
      <div class='form-text text-secondary'>Caption text,description,error notification</div>
    </div>
    </div>
       </div>
    {{/with}}
       {{/with}}
        <hr class="col-8">
       {{#each switch}}
       <div class="col-8">
        <div class="form-check form-switch">
       {{#if isActive includeZero=true}}{{/if}}
       <label class="form-check-label">{{text}}</label>
        <input name="food" type="checkbox" class="form-check-input">
      </div>
    </div>
       {{/each}}
       {{/with}}
       {{/with}}
  </div>
  <hr class="col-8">
   <div class="card col-4">
  {{#each action_block}}
  <div class="col-4">
    {{#if isSuccess}}
            <div
              class='btn btn-success text-light px-2'
            >{{text}}</div>
          {{/if}} 
     {{#if isDanger}}
            <div
              class='btn btn-danger text-light'
            >{{text}}</div>
          {{/if}}  
     {{#if isInfo}}
            <div
              class='btn btn-info text-light'
            >{{text}}</div>
          {{/if}}  
  </div>
  {{/each}}
  </div> 
  
<div class="card col-4">
    {{#with total}}
   <div class="col-4">
    <h4>{{title}}</h4>
     {{#each item_list}}
   {{name}}: {{price}}
   {{/each}}
    </div>
    <hr class="col-12">
    {{#each additional_info}}
    {{text}}: {{value}}
    {{/each}}
    <hr class="4">
    {{#with total_price}}
    {{text}}: {{value}}
    {{/with}}
    <hr class="4">
    {{#each button}}
      {{#if isPrimary}}
            <div
              class='btn btn-primary text-light'
            >{{text}}</div>
          {{/if}}
          {{#if isOutline}}
            <div
              class='btn btn-outline-primary text-primary'
            >{{text}}</div>
          {{/if}}
        {{/each}}
    {{/with}}
   </div>
   {{#with delivery}}
   <h4>{{title}}</h4>
  {{#each select}}
     <div class="col-4">
     <label class='form-label'>{{label}}</label>
     <select class='form-select form-select-sm'>
       <option>{{placeholder}}</option> 
       <option value="">{{text}}</option>
     
       </select>
     </div>
    {{/each}}
   {{/with}}
   
</main>