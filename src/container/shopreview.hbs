<main class="p-5">
    <header>
    {{#with navigation}}
        <div class="card">
            <div class="card-body">
                <div class="nav">
                    <div class="nav-item">
                        <a href={{links.[0].href}} class="nav-link active">{{links.[0].text}}</a>
                    </div>            
                    <div class="nav-item">
                        <a href={{links.[1].href}} class="nav-link">{{links.[1].text}}</a> 
                    </div>
                    <div class="nav-item">
                        <a href={{links.[2].href}} class="nav-link">{{links.[2].text}}</a> 
                    </div>            
                    <div class="nav-item">
                         <a href="/"class="nav-link active">Головна</a>
                    </div>
                </div>
            </div>
        </div>
        {{/with}}
    </header>
    <!--next-->
<section>
    {{#with formBlock}}
        <div class="row">
          <div class="col-8">
            <h2>{{header}}</h2>
            {{#with rating}}   
                 <p>{{title}}:{{value}}</p>
            {{/with}}
            {{#with actionBlock}}
               <div class="nav nav-tabs">
                    <div class="nav-item">
                            <a href="#" class="nav-link">{{tabs.[0].text}}</a>
                    </div>
                    <div class="nav-item">
                            <a href="#" class="nav-link">{{tabs.[1].text}}</a>
                    </div>
                     <div class="nav-item">
                            <a href="#" class="nav-link active">{{tabs.[2].text}}</a>
                    </div>
                </div>
                <div><hr></div>  
                {{#with report}}
                <div class="card">
                    <div class="card-body">
                        <p class="card-title">{{title}}</p>
                        {{#with button}}
                              <button href={{link}} class="btn btn-secondary m-5 p-2">{{text}}</button>
                        {{/with}}
                    </div>
                </div>
                {{/with}}

            {{/with}}
          <div><hr></div> 
          {{#with feedbackBlock}}
           <div class="card">
                    <div class="card-body">
                        <p class="card-title">{{title}}</p>
                       <div class="row">
                        {{#each buttons}}
                         
                            {{#if isWarning}}
                               <div class="col-4">
                                <button class="btn btn-warning mt-2 me-5" href={{link}}>
                                {{text}}
                                </button> 
                                </div>
                            {{/if}}
                            {{#if isSuccess}}
                                <div class="col-4">
                                <button class="btn btn-success mt-2 me-5" href={{link}}>
                                {{text}}
                                </button> 
                                </div>
                            {{/if}}
                            {{#if isDanger}}
                                 <div class="col-4">
                                <button class="btn btn-danger mt-2 me-5" href={{link}}>
                                {{text}}
                                </button> 
                                </div>
                            {{/if}}
                        
                        {{/each}}
                       </div> 
                        
                    </div>
                </div>
          {{/with}} 
         </div>
         <div class="col-4">
           {{#with goodsInfo}}  
             <div class="row">
                <div class="col-12">
                    <div class="card p-3 m-2">
                        <img class="card-img-top" src={{photo}} alt="img">
                        <div class="card-body">
                            <p class="card-title">{{name}}</p>
                            <p class="card-title">{{price}}</p>
                            {{#if inMarket}}
                                <h5>Є в наявності</h5>
                            {{/if}}
                            {{#each buttons}}
                         
                                {{#if isPrimary}}
                                    <button class="btn btn-primary m-2 з-2" href={{link}}>
                                    {{text}}
                                    </button> 
                                {{/if}}
                                {{#if isSecondary}}
                                    <button class="btn btn-secondary m-2 з-2" href={{link}}>
                                    {{text}}
                                    </button> 
                                {{/if}}
                             {{/each}}
                         </div>
                    </div>
                    <div class="card m-2 p-0">
                        <div class="card-body p-1">
                        {{#with seller}}
                            <span class="ms-0 ps-0">{{title}}:<strong>{{value}}</strong></span>
                        {{/with}}
                        </div>
                    </div>
                </div>
            </div>
             {{/with }}
        </div>
     </div>
    {{/with}}
</section>
<div><hr></div>
 <!---next-->
<section>
    {{>reviewItem}}
</section>
<!--next-->
<section>
    {{#with service}}
        <div class="card m-2 p-0 text-bg-success">
            <div class="card-header">
                <h2 class="text-center">{{title}}</h2>
            </div>
            <div class="card-body p-1 text-center">
           
                 <p class="ms-0 ps-0">{{description}}</p>
                <button class="btn btn-primary m-2 з-2" href={{buttons.[0].link}}>
                        {{buttons.[0].text}}
                </button>
            </div>
         </div>
    {{/with}}
</section>
     
