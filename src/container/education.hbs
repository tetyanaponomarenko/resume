{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<div>
<div>
    <a href="/"class="btn btn-warning m-4 p-2">Головна</a>
 </div>
<div class="card">
    <div class="card-body">
            {{#with main}}
                <main>
                    <section>
                        {{>title data="My Edication" big=true}}
                        <ul>
                            {{#each edication}}
                            <li>
                                {{name}}
                                {{#unless isEnd}}
                                    (Ще в процесі)
                                {{/unless}}
                            </li>
                            {{/each}}
                        </ul>
                    </section>
                    <br>
                    <section>
                        {{>title data="My certificates" big=false}}
                        <ul>
                            {{#each certificates}}
                            <li>
                                {{name}}({{id}})
                            </li>
                            {{/each}}
                        </ul>
                    </section>
                </main>
            {{/with}}
        </div>
    </div>
    
</div>

