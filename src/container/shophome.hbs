<main>
  <header class='mb-3 my-2'>
    {{#with navigation}}
      <div class='card p-5'>
        <nav class='nav row'>
          <img
            class='col'
            width='100'
            height='40'
            src='{logo.src}}'
            alt='logo'
          />
          <div class='col-4'></div>
          <ul class='col-4'>
            <li class='d-flex'>
              {{#each links}}
                <a
                  class='nav-link'
                  href='{{href}}'
                >{{text}}</a>
              {{/each}}
              <a
                class='disabled nav-link'
                href='#'
              >Shophome</a>
            </li>
          </ul>
        </nav>
      </div>
    {{/with}}
  </header>
  {{#with newsBlock}}
    <h1 class='text-center'>{{title}}</h1>
    <div class='row gx-3 gy-2'>
      {{#each cards}}
        <div class='col-3'>
          <div class='card bg-dark text-light m-2'>
            <div class='card-body'>
              <h3>{{title}}</h3>
              {{#if isTop}}
                <div
                  class='badge rounded-pill bg-success'
                >Top</div>
              {{/if}}
              {{#if isNew}}
                <div
                  class='badge rounded-pill bg-danger'
                >New</div>
              {{/if}}
              <p>{{description}}</p>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{/with}}

  <hr />
  {{#with goodsBlock}}
    <ul class="nav nav-tabs m-2 mb-5">
            {{#each tabs}}
            <li class="nav-link {{#if isActive}} active {{/if}} 
            {{#if isDisabled}} disabled {{/if}}">
                {{text}}
            </li>
            {{/each}}
        </ul>
         <div class='row col-12'>
        {{#each cards}}
          <div class='col-4 g-5'>
            <div class='card'>
              <img src="{{image}}" alt="{{title}}">
              <div class='card-body'>
                <h3>{{title}}</h3>
                <p>{{description}}</p>
            {{#if isHot}}
                <div
                  class='badge rounded-pill bg-warning'
                >Hot</div>
              {{/if}}
              {{#if isNew}}
                <div
                  class='badge rounded-pill bg-info'
                >New</div>
              {{/if}}
              </div>
            </div>
          </div>
            {{/each}}
         </div>
       {{/with}}
       <hr>
       <div class="row-12">
       {{#with subscribe}}
       <div class="card bg-dark text-light m-2">
       <h2>{{header}}</h2>
       <p>{{description}}</p>
       {{#each buttons}}
       <div>
      <a class='btn btn-info my-2' href={{link}}>{{text}}</a>
       </div>
       {{/each}}
       </div>
       {{/with}}
       </div>

       <hr>
       <div class="row-12">
       {{#with service}}
      <div class="card bg-success text-center text-light m-2">
        <h2>{{title}}</h2>
        <p>{{description}}</p>
         {{#each buttons}}
       <div>
      <a class='btn btn-info my-2' href={{link}}>{{text}}</a>
       </div>
       {{/each}}
       </div>
       {{/with}}
       </div>

       <hr>
      
        <div class="row g-5 m-2">
        {{#each footer}}
        <div class="nav col-2">
          <div>
            {{#each this}}
            <div>
             <a class="nav-link {{#if @last}} 
              disabled {{/if}}" href="{{this.link}}">{{this.text}}</a>
            </div>
            {{/each}}
          </div>
         </div>
        {{/each}}
        </div>

        <hr>
</main>